<%= form_for :books do |form| %>
  <% if book.error.present? %>
    <div style="color: red">
      <h2>Errors prohibited this book from being saved:</h2>

      <ul>
        <li><%= book.error.full_message %></li>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_field :summary %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
