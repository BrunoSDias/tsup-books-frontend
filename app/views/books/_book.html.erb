<div id="<%= book.id %>">
  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Summary:</strong>
    <%= book.summary %>
  </p>

  <p>
    <strong>User:</strong>
    <%= book.user_id %>
  </p>

  <%= link_to "Edit this book", edit_book_path(book.id) %> |
  <%= button_to "Destroy this book", book_path(book.id), method: :delete %>
</div>
